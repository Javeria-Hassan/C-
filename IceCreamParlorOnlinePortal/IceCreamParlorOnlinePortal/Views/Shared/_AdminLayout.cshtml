<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin Dashboard </title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/plugins_admin/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist_admin/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini" style="font-family:'Book Antiqua'">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-secondary" style="background-color: #d81b60">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars" style="color:white"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    @Html.ActionLink("Home", "AdminView", "Admin", null, new { @Class = "nav-link", @style = "color:white" })
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    @Html.ActionLink("Contact Us", "ContactUS", "Admin", null, new { @Class = "nav-link", @style = "color:white" })
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto" style="color:white">

                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="mr-2 d-none d-lg-inline text-gray-600 small" style="color:white">Admin</span>
                        <img src="~/Content/dist_admin/img/AdminLTELogo.png" class="brand-image img-circle elevation-3" style="opacity: .8">
                    </a>
                    <!-- Dropdown - User Information -->
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown" style="color:white">
                        <a class="dropdown-item" href="@Url.Action("AdminProfile", "Admin")">
                            <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                            My Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("Logout", "Home")" data-toggle="modal" data-target="#logoutModal">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            Logout
                        </a>
                    </div>
              
                     

                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4" style="background-color:#6c757d">
            <a href="" class="brand-link">
                <img src="~/Content/dist_admin/img/AdminLTELogo.png" class="brand-image img-circle elevation-3" style="opacity: .8">
                <h6><span class="brand-text font-weight-light" style="font-family:'Microsoft Sans Serif'">ADMIN PORTAL</span></h6>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false" style="font-family:'Book Antiqua'">
                        <li class="nav-item nav-link nav-icon fas fa-tachometer-alt center">
                            @Html.ActionLink("Dashboard", "AdminView", "Admin")<br /><br />
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Employees
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">3</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item nav-link">
                                    @Html.ActionLink("Add Employee", "AddEmployee", "AddEmployee", null, new { @style = "" })
                                </li>

                                <li class="nav-item nav-link">
                                    <p>@Html.ActionLink("View Employee", "ViewEmployee", "AddEmployee")</p>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-shopping-cart"></i>
                                <p>
                                    Products
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">3</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item nav-link">
                                    <p>@Html.ActionLink("Add Category", "AddCategory", "AddCategory")</p>
                                </li>
                                <li class="nav-item nav-link">
                                    <p>@Html.ActionLink("View Category", "ViewCategory", "AddCategory")</p>
                                </li>
                                <li class="nav-item nav-link">
                                    <p>@Html.ActionLink("Add Product", "AddProduct", "AddProduct")</p>
                                </li>

                                <li class="nav-item nav-link">
                                    <p>@Html.ActionLink("View Product", "ViewProduct", "AddProduct")</p>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Vendor Details
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">3</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item nav-link">
                                    @Html.ActionLink("Add Vendors", "AddVendor", "AddVendor", null, new { @style = "" })
                                </li>

                                <li class="nav-item nav-link">
                                    <p>@Html.ActionLink("View Vendor", "ViewVendor", "AddVendor")</p>
                                </li>

                            </ul>
                        </li>
                        <li>
                            <div class="nav-item nav-link">
                                <p> @Html.ActionLink("Check Out", "ViewCustomerCheckOut", "Admin", null, new { @Class = "nav-icon fas fa-check" })</p>
                            </div>
                        </li>


                    </ul>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Main content -->
        <div class="content-wrapper">
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="@Url.Action("Logout","Home")">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content -->
        <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top" style="background-color:deeppink">
            <i class="fas fa-chevron-up"></i>
        </a>

        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2019</strong>
            All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Content/plugins_admin/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/plugins_admin/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Content/dist_admin/js/adminlte.js"></script>
    <!-- OPTIONAL SCRIPTS -->
    <script src="~/Content/plugins_admin/chart.js/Chart.min.js"></script>
    <script src="~/Content/dist_admin/js/demo.js"></script>
    <script src="~/Content/dist_admin/js/pages/dashboard3.js"></script>
</body>
</html>
