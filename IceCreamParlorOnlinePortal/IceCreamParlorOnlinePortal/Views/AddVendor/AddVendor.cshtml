@*------New----*@
@model IceCreamParlorOnlinePortal.Models.AddVendorModel

@{
    ViewBag.Title = "AddVendor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@helper button(string type, string value)
{
    <input type="@type" value="@value" class="btn btn-primary btn-group-lg" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Vendor Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Vend_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vend_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vend_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vend_Company_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vend_Company_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vend_Company_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @button("submit", "Submit")
            </div>
        </div>
        <label class="has-error" style="color:red">@ViewBag.Message</label>
        <div class="clearfix"> </div>
    </div>
}



